{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["javascripts/@types/"]
  },
  "include": ["javascripts/*.js"],
  "exclude": ["javascripts/libs/**/*.js"]
}
{
    "compilerOptions": {
      "lib": ["es2017"],
      "module": "commonjs",
      "noImplicitReturns": true,    
      "esModuleInterop": true,
      "outDir": "dist",
      "sourceMap": true,
      "target": "es5",
      "declaration": true,
      "types": [
        "mocha", "node", "chai"
      ]
    },
    "compileOnSave": true,
    "include": [
      "src"
    ]
  }

